<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NetflixClone.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NetflixClone"
    Shell.FlyoutBehavior="Disabled"
    Title="NetflixClone"
    Shell.TabBarBackgroundColor="#121212"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="#545454">
    <TabBar>
        <ShellContent
        Title="Home"
        Icon="home.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        
        <ShellContent
        Title="Games"
        Icon="console.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage1" />
        
        <ShellContent
        Title="New &amp; Hot"
        Icon="netflix.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage2" />
        
        <ShellContent
        Title="Downloads"
        Icon="download.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage3" />
    </TabBar>

</Shell>
